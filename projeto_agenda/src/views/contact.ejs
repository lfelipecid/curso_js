<%- include('includes/head') %>
<%- include('includes/navbar') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo:</p>

      <%- include('includes/messages') %>


      <% if(contato._id) { %>
      <form action="/contact/edit/<%= contato.id %>" method="POST">
      <% } else { %>
      <form action="/contact/add" method="POST">
      <% } %>

          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <!-- Nome -->
          <div class="form-group">
            <label>Nome:</label>
            <input value="<%- contato.nome %>" type="text" class="form-control" placeholder="Nome" name="nome">
          </div>
          <!-- Sobrenome -->
          <div class="form-group">
            <label>Sobrenome:</label>
            <input value="<%- contato.sobrenome %>" type="text" class="form-control" placeholder="Sobrenome" name="sobrenome">
          </div>
          <!-- email -->
          <div class="form-group">
            <label>E-Mail:</label>
            <input value="<%- contato.email %>" type="email" class="form-control" placeholder="E-mail" name="email">
          </div>
          <!-- telefone -->
          <div class="form-group">
            <label>Telefone:</label>
            <input value="<%- contato.telefone %>" type="text" class="form-control" placeholder="Telefone" name="telefone">
          </div>

          <% if (contato._id) { %>
          <button type="submit" class="btn btn-primary">Editar Contato</button>
          <!-- <button type="submit" class="btn btn-danger">Deletar Contato</button> -->
          <a class="btn btn-danger" href="/contact/del/<%= contato.id %>">Deletar Contato</a>
          <% } else { %>
          <button type="submit" class="btn btn-primary">Salvar Contato</button>
          <% } %> 


        </form>


    </div>

    <div class="col-lg-2"></div>
  </div>
</div>


<%- include('includes/footer') %>